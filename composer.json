{
  "name": "texlab/lightdb",
  "type": "library",
  "description": "The lightweight MySql database library",
  "keywords": [
    "php",
    "orm",
    "mysql",
    "object",
    "data"
  ],
  "license": "MIT",
  "require": {
    "php": "^7.2",
    "ext-mysqli": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "TexLab\\LightDB\\": "src"
    }
  },
  "scripts": {
    "test": "phpunit --testsuite alltests",
    "doc": "phpdoc "
  },
  "archive": {
    "exclude": [
      "tests",
      "phpunit.xml"
    ]
  }
}
